<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primaryProfile"
    tools:context="com.example.richie.mytaxi.Profile_fragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/profileLayout"
        android:background="@color/textColor"
        android:orientation="horizontal"
        >


        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imageView2"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:background="@mipmap/profile_icon"
            android:layout_marginTop="45dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:textColor="#ffcc11"
            android:id="@+id/profile_Name"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/imageView2"
            android:layout_alignBottom="@+id/imageView2"
             />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/profilemail"
            android:layout_alignLeft="@+id/imageView2"
            android:layout_below="@+id/imageView2"
            android:layout_marginTop="20dp"
            android:background="@mipmap/mail"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="siddahrthchughs@gmail.com"
            android:textColor="#ffcc11"
            android:id="@+id/textView2"
            android:textSize="20sp"
            android:layout_alignLeft="@+id/profile_Name"

            android:layout_alignBottom="@+id/profilemail"
            />



    </RelativeLayout>

</RelativeLayout>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
   android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@color/primary"
    android:layout_gravity="center_vertical">

    <Button
        android:id="@+id/project_Manager"
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@drawable/ripple_task"
        android:elevation="15dp"
        android:text="Book a cab"
        android:textSize="20sp"
        />


    <Button
        android:id="@+id/project_Task"
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"

        android:layout_alignBottom="@+id/project_Manager"
        android:layout_toRightOf="@+id/project_Manager"
        android:background="@drawable/ripple_task"
        android:elevation="15dp"
        android:text="Current Location"
        android:textSize="20sp"

        />


    <Button
        android:id="@+id/Employee_Details"
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:layout_alignLeft="@+id/project_Manager"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_below="@id/project_Manager"
        android:background="@drawable/ripple_task"
        android:elevation="12dp"
        android:text="Edit Profile"
        android:textSize="20sp"

        />

      <Button
          android:id="@+id/project_Contacts"
          android:layout_width="170dp"
          android:layout_height="150dp"
          android:layout_marginRight="5dp"
          android:layout_alignLeft="@+id/project_Task"
          android:layout_alignRight="@+id/project_Task"
          android:layout_alignBaseline="@+id/Employee_Details"
          android:layout_alignBottom="@+id/Employee_Details"
          android:background="@drawable/ripple_task"
          android:elevation="15dp"
          android:layout_marginTop="10dp"
          android:text="Share"
          android:textSize="20sp"

          />
      <Button
          android:id="@+id/project_Meetings"
          android:layout_width="170dp"
          android:layout_height="150dp"
          android:layout_marginRight="5dp"
          android:layout_marginTop="@dimen/activity_vertical_margin"
          android:layout_below="@+id/Employee_Details"
          android:layout_alignLeft="@+id/Employee_Details"
          android:background="@drawable/ripple_task"
          android:elevation="15dp"
          android:text="History Of Trips"
          android:textSize="20sp"

          />

     <!-- <Button
          android:layout_width="170dp"
          android:layout_height="150dp"
          android:layout_marginRight="5dp"
          android:layout_marginTop="@dimen/activity_vertical_margin"
          android:layout_below="@+id/project_Task"
          android:layout_alignRight="@+id/project_Task"
          android:background="@drawable/ripple_meeting"

          android:elevation="12dp"
          android:text="Meeting Schdeduled"
          android:textSize="20sp"


          />-->
</RelativeLayout>


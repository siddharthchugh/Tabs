<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary"
   >

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
android:layout_marginTop="6dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:elevation="5dp"
        android:background="@color/primary"
android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:layout_margin="30dp"
        android:layout_gravity="center">

    <Button
        android:id="@+id/project_Manager"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_alignWithParentIfMissing="true"
        android:background="@drawable/ripple_task"
        android:elevation="12dp"
        android:text="Cab Services"
        android:textSize="20sp"

        />


    <Button
        android:id="@+id/project_Task"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/project_Manager"
        android:layout_alignBottom="@+id/project_Manager"
        android:background="@drawable/ripple_task"
        android:elevation="12dp"
        android:text="Current Location"
        android:textSize="20sp"

        />


    <Button
        android:id="@+id/Employee_Details"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_toRightOf="@+id/project_Task"
        android:background="@drawable/ripple_task"
        android:elevation="12dp"
        android:text="Edit Profile"
        android:textSize="20sp"

        />


    <Button
        android:id="@+id/project_Contacts"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/ripple_task"
        android:elevation="12dp"
        android:layout_marginTop="15dp"
        android:text="Share"
        android:textSize="20sp"
        android:layout_below="@+id/project_Manager"

        />
    <Button
        android:id="@+id/project_Meetings"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/ripple_task"
        android:elevation="12dp"
        android:layout_alignBottom="@+id/project_Contacts"
        android:layout_toRightOf="@+id/project_Contacts"
        android:layout_alignLeft="@+id/project_Task"
        android:layout_marginLeft="2dp"

        android:text="History Of Trips"
        android:textSize="20sp"

        />

<!--
    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_alignBottom="@+id/project_Contacts"
        android:layout_toRightOf="@+id/project_Meetings"
        android:layout_alignLeft="@+id/Employee_Details"
        android:background="@drawable/ripple_task"

        android:elevation="12dp"
        android:text="Meeting Schdeduled"
        android:textSize="20sp"


        />
-->
</RelativeLayout>
    </ScrollView>
    </RelativeLayout>


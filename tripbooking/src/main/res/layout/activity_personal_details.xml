
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/namedata"
    android:background="@color/textcolor"
    tools:context="com.example.richie.tripbooking.PersonalDetails"

    >


    <include
        android:id="@+id/toolBar"
        layout="@layout/appbar"

        />


        <RelativeLayout
            android:id="@+id/personalDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/toolBar"
            android:background="@color/white"
            android:paddingTop="10dp"
            android:elevation="10dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"
            >
            <TextView
                android:id="@+id/Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="20sp"
                android:textColor="@color/textcolor"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Name"
                android:layout_marginTop="5dp"
                android:layout_alignLeft="@+id/Name"
                android:layout_alignRight="@+id/Name"

                android:id="@+id/editText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Postal Address"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/textcolor"
                android:id="@+id/textView2"
                android:layout_below="@+id/editText"
                android:layout_alignParentLeft="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:ems="10"
                android:id="@+id/editText4"
                android:layout_below="@+id/textView2"
                android:layout_alignRight="@+id/Name"
                android:layout_alignLeft="@+id/Name"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Phone Number"
                android:id="@+id/phoneno"
                android:textColor="@color/textcolor"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/editText4"
                android:layout_alignParentLeft="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/editText2"
                android:layout_below="@+id/phoneno"
                android:layout_alignLeft="@+id/Name"
                android:layout_alignRight="@+id/Name"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Email"
                android:textSize="20sp"
                android:textColor="@color/textcolor"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/textView3"
                android:layout_below="@+id/editText2"
                android:layout_alignLeft="@+id/phoneno" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/editText3"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/textView3"
                android:layout_alignLeft="@+id/phoneno"
                android:layout_alignRight="@+id/editText2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Gender"
                android:id="@+id/gender"
                android:textColor="@color/textcolor"
                android:textSize="20sp"
                android:layout_below="@+id/editText3"
                android:layout_alignLeft="@+id/editText2"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"

                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:id="@+id/male"
                android:textSize="16sp"
                android:textColor="@color/textcolor"
                android:layout_below="@+id/gender"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
 android:paddingRight="10dp"

                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:id="@+id/female"
                android:textSize="16sp"
                android:textColor="@color/textcolor"

                android:layout_alignBaseline="@+id/male"
                android:layout_toRightOf="@+id/male"
                android:layout_marginLeft="10dp"
           android:paddingRight="10dp"
                />


        </RelativeLayout>

        <Button
            android:id="@+id/selectDrive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="cinfirm booking"
            android:textColor="@color/textcolor"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="5dp"
            android:textSize="20sp"
            android:textStyle="bold"

            android:layout_alignParentBottom="true"
         android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/rightarw"
            android:layout_alignRight="@+id/personalDetail"
            android:layout_alignLeft="@+id/personalDetail"
            android:background="@drawable/ripplert"
            android:gravity="center_horizontal|center_vertical"

            />


    </RelativeLayout>







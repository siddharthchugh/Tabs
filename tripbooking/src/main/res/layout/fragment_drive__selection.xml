<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.richie.simplefrags.Drive_Selection$PlaceholderFragment">

    <LinearLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:background="#fff"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        >

        <Button
            android:id="@+id/economy"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="one way"
            android:textColor="@drawable/clickedstate"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="16sp"
            android:onClick="drive"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/rippleclassic"

            />

        <Button
            android:id="@+id/business"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@drawable/clickedstate"
            android:text="round"
            android:onClick="drive"
            android:background="@drawable/ripple_business"
            android:textSize="16sp"
            android:layout_marginLeft="2dp"
            android:layout_alignBaseline="@+id/button1"
            android:layout_toRightOf="@+id/button1"

            />
        <Button
            android:id="@+id/premium"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"

            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@drawable/clickedstate"
            android:text="round trip"
            android:onClick="drive"
            android:background="@drawable/ripple_premium"
            android:textSize="16sp"
            android:layout_marginLeft="2dp"
            android:layout_alignBaseline="@+id/button1"
            android:layout_toRightOf="@+id/button1"

            />
    </LinearLayout>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@+id/relativeLayout1"
      android:layout_marginTop="10dp"
      android:gravity="center_horizontal"

      >

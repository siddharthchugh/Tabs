            android:id="@+id/fragment2"
          android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/toolBar"
            tools:layout="@layout/fragment_fragment_thanks" />


    </RelativeLayout>

